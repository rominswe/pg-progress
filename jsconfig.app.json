{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,         // <-- important
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "**/*.js", "**/*.jsx"]
}